                        <div class="form-group ">
                            <div class="col-xs-12">
                                <input class="form-control" type="text" id="txtEmail" name="txtEmail" placeholder="Địa chỉ email">
                            </div>
                        </div>
                        
                        <div class="form-group text-center m-t-20">
                            <div class="col-xs-12">
                                <button type="button" id="btn-resetPass" class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light">Lấy lại mật khẩu</button>
                            </div>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </section>
