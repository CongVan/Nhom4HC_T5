<script src="~/Scripts/User/AccountSetting/user.AccountSetting.js"></script>
<!-- Custom JavaScript -->
<script>
    function formatDate(date) {
        var dateFormat = new Date();
        var day = date.getDate();
        var monthIndex = date.getMonth();
        var year = date.getFullYear();
        dateFormat.setDate = day;
        dateFormat.setFullYear = year;
        dateFormat.setMonth = monthIndex;
        return dateFormat
    }
</script>