@inherits System.Web.Mvc.WebViewPage
@{
    Layout = null;//"~/Views/Layout.cshtml";
    //ViewsBag.Title = "Trang đăng ký";
}
@using User.AccountSetting.Areas.User.Models
<link href="~/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
<link href="~/assets/plugins/bootstrap-datepicker/bootstrap-datepicker.min.css" rel="stylesheet">
    <!-- Custom CSS -->
<link href="~/public/css/style.css" rel="stylesheet">
<!-- You can change the theme colors from here -->
<link href="~/public/css/colors/blue.css" id="theme" rel="stylesheet">
<link href="~/assets/plugins/sweetalert/sweetalert.css" rel="stylesheet" />
<style>
    .error{
        color:red;
    }
    body {
        background-image: url(../assets/images/background/login-register.jpg);
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
    }
    @@media (max-width: 1140px) {
        body {
            height: 100%;
        }
    }
</style>
@{var user = (UserModel)ViewData["Mes"];}
<div class="py-3">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-block">
                        <form class="form-horizontal form-material" id="loginform">
                            <h3 class="box-title m-b-20">Cập nhật tài khoản</h3>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <label>Name:</label>
                                    <input class="form-control" type="text" id="hoTen" name="HoTen" placeholder="Họ tên" required value="@user.HoTen">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-xs-12">
                                    <label>Date Of Birth:</label>
                                    <input class="form-control dateOfbirth" type="text" id="ngaySinh" name="NgaySinh" placeholder="Ngày sinh" value= "@user.NgaySinh.Date.ToShortDateString()">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <label>Giới tính &nbsp;</label>
                                    @if(user.GioiTinh == "Nam")
                                    {
                                        <div class="form-check-inline">
                                            <label><input type="radio" name="GioiTinh" value="1" checked>Nam</label>
                                        </div>
                                        <div class="form-check-inline">
                                            <label><input type="radio" name="GioiTinh" value="0">Nữ</label>
                                        </div>
                                    }
                                    else { 
                                        <div class="form-check-inline">
                                            <label><input type="radio" name="GioiTinh" value="1">Nam</label>
                                        </div>
                                        <div class="form-check-inline">
                                            <label><input type="radio" name="GioiTinh" value="0" checked>Nữ</label>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <label>UserName:</label>
                                    <input class="form-control" type="text" id="tenDangNhap" name="TenDangNhap" placeholder="Tên đăng nhập" value ="@user.TenDangNhap" readonly>
                                </div>
                            </div>
                            @*<div class="form-group ">
                                <div class="col-xs-12">
                                    <input class="form-control" type="password" id="matKhau" name="MatKhau" placeholder="Mật khẩu" readonly>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <input class="form-control" type="password" id="nhapLaiMatKhau" name="NhapLaiMatKhau" placeholder="Nhập lại mật khẩu" readonly>
                                </div>
                            </div>*@
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <label>Email:</label>
                                    <input class="form-control" type="email" id="email" name="Email" placeholder="Email" value="@user.Email" readonly>
                                </div>
                            </div>
                            @*<div class="form-group">
                                    <div class="col-xs-12">
                                        <img src="/User/Register/GetCaptChaImage" />
                                        <input class="form-control" type="text" id="CaptchaText" name="CaptchaText" placeholder="Nhập captcha">
                                    </div>
                                </div>*@
                            <div class="form-group text-center m-t-20">
                                <div class="row">
                                    <div class="col-md-6 text-left">
                                        <input type="button" id="btn-register" class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" value="Cập nhật">
                                    </div>
                                    <div class="col-md-6 text-right">
                                        <input type="button" id="btn-callback" class="btn btn-lg btn-block text-uppercase waves-effect waves-light" value="Quay lại">
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Default JavaScript -->
<script src="~/assets/plugins/jquery/jquery.min.js"></script>
<script src="~/assets/plugins/bootstrap/js/tether.min.js"></script>
<script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
<script src="~/assets/plugins/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
<script src="~/assets/plugins/wizard/jquery.validate.min.js"></script>
