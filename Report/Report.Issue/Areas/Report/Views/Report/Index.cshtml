@inherits System.Web.Mvc.WebViewPage
@{
    Layout = "~/Views/Layout.cshtml";
}
@section css{
    <link href="~/assets/plugins/sweetalert/sweetalert.css" rel="stylesheet" />
    <link href="~/assets/plugins/bootstrap-datepicker/bootstrap-datepicker.min.css" rel="stylesheet">
    <style>
    .ButtonExport {
        height: 24px;
        width: 22px;
        box-sizing: border-box;
        border: none;
        outline: none;
        cursor: pointer;
        float: right;
        margin-right: 10px;
        margin-top: 5px;
        background-position: center;
        background-repeat: no-repeat;
        background-color: #fff;
    }
        .ButtonExport:hover {
            -webkit-animation-name: HoverButtonExport;
            -webkit-animation-duration: 500ms;
            animation-name: HoverButtonExport;
            animation-duration: 500ms;
        }
        .ButtonExport.sknadExExcel {
            background-image: url(/assets/images/iConExcel.png);
            background-size: 22px 24px;
        }
        .ButtonExport.sknadExPDF {
            background-image: url(/assets/images/iConPDF.png);
            background-size: 22px 24px;
        }
        .ButtonExport.sknadExWord {
            height: 24px;
            width: 21px;
            background-image: url(/assets/images/iConWord.png);
            background-size: 21px 24px;
        }
    @@-webkit-keyframes HoverButtonExport {
        0% {
            margin-top: 5px;
        }
        50% {
            margin-top: 0px;
        }
        100% {
            margin-top: 5px;
        }
    }
    @@keyframes HoverButtonExport {
        0% {
            margin-top: 5px;
        }

        50% {
            margin-top: 0px;
        }

        100% {
            margin-top: 5px;
        }
    }
</style>
}
<div class="content">
    <div class="row py-3">
        <h4>Thống kê vấn đề</h4>
    </div>
    <div class="row py-3">
        <div class="col-md-4">
            <select id="sel-duan" class="form-control">
                <option value="">Chọn dự án</option>
            </select>
        </div>
        <div class="col-md-8">
            <div class="form-group">
                <span class="ButtonExport sknadExExcel" title="Import Excel">&nbsp;</span>
                <span class="ButtonExport sknadExPDF" title="Import PDF">&nbsp;</span>
                <span class="ButtonExport sknadExWord" title="Import Word">&nbsp;</span>
            </div>
        </div>
    </div>
    <table id="myTable" class="table">
        <thead>
            <tr>
                <td>
                    Tên thành viên
                </td>
                <td>
                    Chưa xác nhận
                </td>
                <td>
                    Đã xác nhận
                </td>
                <td>
                    Đang xử lý
                </td>
                <td>
                    Đã xử lý xong
                </td>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section js{
    <script src="~/assets/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/assets/plugins/datatables/dataTables.bootstrap.js"></script>
    <script src="~/assets/plugins/sweetalert/sweetalert.min.js"></script>
    <script src="~/assets/plugins/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <script src="~/assets/plugins/moment/min/moment.min.js"></script>
    <script src="~/Scripts/Report/report.issue.js"></script>
}
